<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hxgz.chuantv">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:networkSecurityConfig="@xml/network_security_config"
            android:theme="@style/AppTheme">

        <activity android:name="com.hxgz.chuantv.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.hxgz.chuantv.VideoDetailActivity"/>
        <activity android:name="com.hxgz.chuantv.PickerActivity"/>
        <activity android:name="com.hxgz.chuantv.SearchActivity"/>
        <activity android:name="com.hxgz.chuantv.PlaybackActivity"/>

        <service android:name=".playback.PlaybackService"/>

    </application>

</manifest>